# ===============================================
# Environment Variables for Go Base Project
# ===============================================
#
# Copy this file to .env and fill in the values according to your environment.
# DO NOT commit .env file containing sensitive credentials to Git.

# Application mode (development, staging, production)
ENV=--

# Port for API server
PORT=--

FRONTEND_URL=--

# PostgreSQL database connection URL
DATABASE_URL=host=-- user=-- password=-- dbname=-- port=-- sslmode=--

# DATABASE CONNECTION POOL SETTINGS
# Maximum number of connections allowed to open to the database.
DB_MAX_OPEN_CONNS=25
# Maximum number of connections allowed to idle in the pool.
DB_MAX_IDLE_CONNS=10
# Maximum amount of time a connection can be reused (prevents stale connections).
DB_CONN_MAX_LIFETIME=5m
# Maximum amount of time a connection can idle before being closed.
DB_CONN_MAX_IDLE_TIME=1m

# Redis connection URL
REDIS_URL=--

# Secret key for JSON Web Token (JWT).
# MUST be filled with a strong and long random string.
# Example to generate in terminal: openssl rand -base64 32
JWT_SECRET=--

# Default password for the first admin user
ADMIN_DEFAULT_PASSWORD=--

# Google OAuth Configuration
GOOGLE_CLIENT_ID=--
GOOGLE_CLIENT_SECRET=--

# Rate Limiting Settings
ENABLE_RATE_LIMIT=true
API_REQUESTS_PER_MINUTE=1000
AUTH_REQUESTS_PER_MINUTE=10
