# Environment configuration for production
# Copy this to .env.production and fill in actual values

# SECURITY: Generate strong random values for production!
# Use: openssl rand -base64 32

# Application Settings
ENV=production
PORT=8080
FRONTEND_URL=https://yourdomain.com

# Database Configuration
# Use connection pooling settings appropriate for your load
DATABASE_URL=postgres://user:password@localhost:5432/beresin_production?sslmode=require
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=25d
DB_CONN_MAX_LIFETIME=30m
DB_CONN_MAX_IDLE_TIME=5m

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
# CRITICAL: Use a strong, unique secret in production
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_IN_PRODUCTION

# Admin Configuration
ADMIN_DEFAULT_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# Google OAuth (required in production)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Security Headers (optional - for future enhancement)
# ENABLE_HTTPS_ONLY=true
# ENABLE_HSTS=true
# ENABLE_CSRF_PROTECTION=true
